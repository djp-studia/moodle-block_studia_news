<div class="tw-relative tw-w-full tw-py-8 tw-px-12 tw-rounded-xl tw-border tw-shadow-lg tw-mb-8 tw-overflow-hidden hover:tw-overflow-y-auto">
    {{#pages}}
    <div class="tw-px-8 tw-pb-8 last:tw-pb-0 tw-border-l last:tw-border-l-0 tw-space-y-2 tw-relative">
        <div class="tw-border-4 tw-border-white tw-text-rose-500 tw-bg-rose-200 tw-p-2 tw-rounded-full tw-absolute -tw-top-2 -tw-left-5 tw-flex tw-items-center tw-justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="tw-h-4 tw-w-4" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
            </svg>
        </div>
        <div>
            <div class="tw-text-xl tw-font-semibold tw-text-gray-800 tw-items-top tw-space-x-1 tw-flex">
                <h1>{{ name }}</h1>
                {{#is_new}}
                <div class="tw-relative">
                    <div class="tw-bg-yellow-300 tw-rounded-full tw-h-3 tw-w-3 tw-animate-ping tw-opacity-75"></div>
                    <div class="tw-absolute tw-bg-yellow-300 tw-rounded-full tw-h-3 tw-w-3 tw-top-0"></div>
                </div>
                {{/is_new}}
            </div>
            <p class=tw-text-slate-400>{{ datetime }}</p>
        </div>
        {{#intro}}
            <div class="tw-text-slate-600 tw-line-clamp-3 tw-overflow-hidden">
                {{{ intro }}}
            </div>
            <a href="{{ url }}" class="tw-w-32 tw-bg-white tw-border tw-rounded-lg tw-px-2 tw-py-1 tw-text-sm tw-flex tw-space-x-1 hover:tw-shadow tw-transition tw-duration-200 tw-ease-in-out">
                <span>selengkapnya</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="tw-h-5 tw-w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
            </a>
        {{/intro}}
    </div>
    {{/pages}}
</div>